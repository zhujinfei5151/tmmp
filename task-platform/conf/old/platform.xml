<!-- 
	平台启动 -> 初始化并启动各服务与引擎（任务运行引擎）
	任务运行引擎启动 -> 扫描并加载各task.xml -> 对每个task：初始化运行代理组件 -> 启动任务运行代理组件（从而启动任务）
 -->
<platform type="master">
	<!-- 连接器 -->
	<conector port="9000"></conector>
	<!-- 资源配置 -->
	<cluster>
		<node uri="127.0.0.1:9000"></node>
		<!--  
		<node uri="192.168.3.1:9000"></node>
		<node uri="192.168.3.2:9000"></node>
		-->
	</cluster>
</platform>